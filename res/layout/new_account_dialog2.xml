<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.coffeearmy.piggybank"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <RadioGroup
        android:id="@+id/radioGroupAccountIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.coffeearmy.piggybank.view.CustomCheckIcon
            android:id="@+id/radio0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            app:numCustomIcon="-1"
            app:numCustomStyle="0" />

        <com.coffeearmy.piggybank.view.CustomCheckIcon
            android:id="@+id/radio1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:checked="false"
            app:numCustomIcon="-1"
            app:numCustomStyle="1" />

        <com.coffeearmy.piggybank.view.CustomCheckIcon
            android:id="@+id/radio2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:checked="false"
            app:numCustomIcon="-1"
            app:numCustomStyle="2" />

        <com.coffeearmy.piggybank.view.CustomCheckIcon
            android:id="@+id/radio3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:checked="false"
            app:numCustomIcon="-1"
            app:numCustomStyle="3"/>

        <com.coffeearmy.piggybank.view.CustomCheckIcon
            android:id="@+id/radio4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:checked="false"
            app:numCustomIcon="-1"
            app:numCustomStyle="4"/>

        <com.coffeearmy.piggybank.view.CustomCheckIcon
            android:id="@+id/radio5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:checked="false"
            app:numCustomIcon="-1"
            app:numCustomStyle="5" />

        <com.coffeearmy.piggybank.view.CustomCheckIcon
            android:id="@+id/radio6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:checked="false"
            app:numCustomIcon="-1"
            app:numCustomStyle="6" />

        <com.coffeearmy.piggybank.view.CustomCheckIcon
            android:id="@+id/radio7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:checked="false"
            app:numCustomIcon="-1"
            app:numCustomStyle="7" />
    </RadioGroup>

</HorizontalScrollView>