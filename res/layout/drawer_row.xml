<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_container_operation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:minHeight="48dp" >

    <com.coffeearmy.piggybank.view.CustomIcon
        android:id="@+id/imgvDrawerIconAccount"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        />

    <com.coffeearmy.piggybank.view.FontFitTextView
        android:id="@+id/txtvDrawerAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgvDrawerIconAccount"
        android:gravity="center_vertical"
        android:text="000"
        android:textColor="#000"
        tools:ignore="SelectableText" />
    
    <com.coffeearmy.piggybank.view.FontFitTextView
        android:id="@+id/txtvDrawerAccountMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:gravity="center_vertical|right"
        android:text="0000"
        android:textColor="#000"
        tools:ignore="SelectableText" />

</RelativeLayout>