<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.coffeearmy.piggybank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="48dp" >
    
      <com.coffeearmy.piggybank.view.CustomIcon
          android:id="@+id/imgvIconAccountOverview"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_margin="8dp"
          app:numCustomStyleBG="1" />

    <TextView
        android:id="@+id/txtvAccountNameOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/imgvIconAccountOverview"
        android:padding="8dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/txtvAccountMoneyOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/txtvAccountNameOverview"
        android:gravity="right"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
